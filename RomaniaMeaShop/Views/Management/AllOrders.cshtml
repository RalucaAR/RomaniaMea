@model IEnumerable<RomaniaMea.API.ViewModels.MyOrderViewModel>
<h2>Toate comenzile</h2>

@if (Model?.Count() <= 0)
{
    <div>
        <p>Nu aveți nicio comandă momentan!</p>
    </div>
    return;
}

<table class="table table-striped text-center">
    <thead>
        <tr>
            <th>Adresa de facturare</th>
            <th>Sumar comandă</th>
            <th>Total</th>
            <th>Stare comandă</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var order in Model)
        {

            <tr>

                <td class="text-justify">
                    <div>
                        @order.OrderPlaceDetails.Name,
                        @order.OrderPlaceDetails.AddressLine1
                    </div>
                    <div>
                        @order.OrderPlaceDetails.City
                    </div>
                    <div>@order.OrderPlaceDetails.PhoneNumber</div>
                    <div>@order.OrderPlaceDetails.Email</div>
                    <br />
                    <div>
                        @order.OrderPlacedTime.Date.ToString("dd MMM yyyy")
                    </div>

                </td>


                <td>
                    <table class="table">
                        <tbody>
                            @foreach (var item in order.ProductOrderInfos)
                            {
                                <tr>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.Price lei * @item.Quantity

                                    </td>
                                </tr>

                            }
                        </tbody>

                    </table>
                </td>
                <td>
                    @order.OrderTotal
                </td>
                <td>
                    <form asp-controller="Management" asp-action="SetOrderState"
                          asp-route-id="@order.Id"
                          asp-route-orderState="@order.OrderState"
                          method="put">
                        <div class="form-group">
                            <label asp-for="@order.OrderState"></label>
                            <select asp-for="@order.OrderState">
                                <option class="custom-select" value="În așteptare">În așteptare</option>
                                <option class="custom-select" value="În livrare">În livrare</option>
                                <option class="custom-select" value="Livrată">Livrată</option>
                            </select>
                            <span asp-validation-for="@order.OrderState"></span>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-primary buy-now-btn">Save</button>
                        </div>
                    </form>
                </td>
            </tr>

        }

    </tbody>
</table>
