@model IEnumerable<RomaniaMea.Models.Product>

<h1>Obiecte din cermică</h1>
@if (Model.Count() > 0)
{
    <div class="row">
        @foreach (var product in Model)
        {
            @await Html.PartialAsync("ProductView", product);
        }
    </div>
}
else
{
<p>Ne pare rău dar nu am gpsit niciun obiect din ceramică! &#128546; </p>
}
